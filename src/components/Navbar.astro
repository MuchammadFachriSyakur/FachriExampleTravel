---
import { Image } from "astro:assets";
import logo from "../assets/images/logo.webp";
---

<nav
  class="sticky top-0 z-50 bg-white/90 backdrop-blur-md border-b border-primary/10"
>
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="flex justify-between items-center h-20">
      
      <!-- Logo -->
      <div class="flex items-center gap-3">
        <Image src={logo} alt="FachriExampleTravel Logo" class="w-10 h-10 bg-primary rounded-lg" width={60} height={60} />
        <span class="text-2xl font-bold tracking-tight text-primary">
          FachriExampleTravel
        </span>
      </div>

      <!-- Desktop Menu -->
      <div class="hidden md:flex items-center space-x-8">
        <a class="nav-link text-slate-700 hover:text-primary transition-colors" href="#Hero">Beranda</a>
        <a class="nav-link text-slate-700 hover:text-primary transition-colors" href="#keunggulan">Keunggulan</a>
        <a class="nav-link text-slate-700 hover:text-primary transition-colors" href="#paket">Paket Wisata</a>
        <a class="nav-link text-slate-700 hover:text-primary transition-colors" href="#prosedur">Prosedur</a>
        <a class="nav-link text-slate-700 hover:text-primary transition-colors" href="#testimoni">Testimoni</a>
        <a class="nav-link text-slate-700 hover:text-primary transition-colors" href="#tentang">Tentang</a>
        <a class="nav-link text-slate-700 hover:text-primary transition-colors" href="#kontak">Kontak</a>

        <a
          href="https://wa.me/6287715240225?text=Halo%20FachriExampleTravel,%20saya%20ingin%20konsultasi%20gratis%20mengenai%20paket%20wisata."
          class="bg-primary text-white px-6 py-2.5 rounded-full font-bold text-sm hover:bg-primary/90 transition shadow-lg shadow-primary/20 flex items-center justify-center underline-none"
          aria-label="Konsultasi Gratis via WhatsApp"
        >
          Konsultasi Gratis
        </a>
      </div>

      <!-- Mobile Button -->
      <button
        id="menuBtn"
        aria-label="Buka Menu"
        class="md:hidden w-10 h-10 flex items-center justify-center rounded-lg hover:bg-black/5 transition"
      >
        <span class="material-icons">menu</span>
      </button>
    </div>
  </div>

  <!-- Mobile Menu -->
  <div
    id="mobileMenu"
    class="md:hidden hidden bg-white border-t border-primary/10"
  >
    <div class="flex flex-col p-6 space-y-4">
      <a class="mobile-link text-slate-700 hover:text-primary transition-colors" href="#Hero">Beranda</a>
      <a class="mobile-link text-slate-700 hover:text-primary transition-colors" href="#keunggulan">Keunggulan</a>
      <a class="mobile-link text-slate-700 hover:text-primary transition-colors" href="#paket">Paket Wisata</a>
      <a class="mobile-link text-slate-700 hover:text-primary transition-colors" href="#prosedur">Prosedur</a>
      <a class="mobile-link text-slate-700 hover:text-primary transition-colors" href="#testimoni">Testimoni</a>
      <a class="mobile-link text-slate-700 hover:text-primary transition-colors" href="#tentang">Tentang</a>
      <a class="mobile-link text-slate-700 hover:text-primary transition-colors" href="#kontak">Kontak</a>

      <a
        href="https://wa.me/6287715240225?text=Halo%20FachriExampleTravel,%20saya%20ingin%20konsultasi%20gratis%20mengenai%20paket%20wisata."
        class="mt-4 bg-primary text-white py-3 rounded-full font-bold shadow-lg shadow-primary/20 text-center underline-none"
        aria-label="Konsultasi Gratis via WhatsApp"
      >
        Konsultasi Gratis
      </a>
    </div>
  </div>

</nav>
