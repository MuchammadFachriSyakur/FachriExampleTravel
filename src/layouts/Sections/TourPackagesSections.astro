---
import { Image } from "astro:assets";
import baliImages from "../../assets/images/bali.png";
import jogjaImages from "../../assets/images/jogja.png";
import lombokImages from "../../assets/images/lombok.png";
---

<section class="py-24 bg-background-light" id="paket">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="text-center max-w-3xl mx-auto mb-16">
          <h2
            class="text-blue-600 font-bold uppercase tracking-widest text-sm mb-4"
          >
            Destinasi Populer
          </h2>
          <h3 class="text-4xl font-bold mb-4">
            Pilih Paket Wisata Impian Anda
          </h3>
          <p class="text-slate-600">
            Harga kompetitif dengan fasilitas premium yang sudah termasuk tiket
            masuk, akomodasi, dan transportasi.
          </p>
        </div>
        <div class="grid md:grid-cols-3 gap-8">
          <!-- Bali Card -->
          <div
            class="bg-white rounded-2xl overflow-hidden shadow-lg border border-primary/5 hover:shadow-2xl transition-all group"
          >
            <div class="relative h-64 overflow-hidden">
              <Image
                alt="Traditional Balinese temple overlooking the ocean during Bali Tour"
                class="w-full h-full object-cover group-hover:scale-110 transition-transform duration-500"
                src={baliImages}
                width={600}
                height={400}
                widths={[400, 600, 800]}
                sizes="(max-width: 768px) 100vw, 33vw"
                loading="lazy"
              />
              <span
                class="absolute top-4 right-4 bg-primary text-white text-xs font-bold px-3 py-1 rounded-full"
                >Best Seller</span
              >
            </div>
            <div class="p-6">
              <div class="flex justify-between items-start mb-4">
                <div>
                  <h4 class="text-xl font-bold mb-1">Bali Exotic 4D3N</h4>
                  <p class="text-slate-600 text-sm flex items-center gap-1">
                    <span class="material-icons text-sm">location_on</span>
                    Kuta, Ubud, Uluwatu
                  </p>
                </div>
                <div class="text-right">
                  <span class="text-xs text-slate-600 block uppercase"
                    >Mulai Dari</span
                  >
                  <span class="text-primary font-bold text-lg">Rp 3.2jt</span>
                </div>
              </div>
              <ul class="space-y-2 mb-6">
                <li
                  class="flex items-center gap-2 text-sm text-slate-600"
                >
                  <span class="material-icons text-sm text-green-500"
                    >done</span
                  >
                  Hotel Bintang 4
                </li>
                <li
                  class="flex items-center gap-2 text-sm text-slate-600"
                >
                  <span class="material-icons text-sm text-green-500"
                    >done</span
                  >
                  Transportasi AC Private
                </li>
              </ul>
              <a
                href="https://wa.me/6287715240225?text=Halo%20FachriExampleTravel,%20saya%20tertarik%20pesan%20paket%20Bali%20Exotic%204D3N."
                class="block w-full py-3 bg-primary/10 hover:bg-primary hover:text-white text-primary font-bold rounded-lg transition-all text-center underline-none"
                aria-label="Pesan Paket Bali Exotic 4D3N lewat WhatsApp"
              >
                Pesan Sekarang
              </a>
            </div>
          </div>
          <!-- Jogja Card -->
          <div
            class="bg-white rounded-2xl overflow-hidden shadow-lg border border-primary/5 hover:shadow-2xl transition-all group"
          >
            <div class="relative h-64 overflow-hidden">
              <Image
                alt="Borobudur temple at sunrise in Yogyakarta during Jogja Trip"
                class="w-full h-full object-cover group-hover:scale-110 transition-transform duration-500"
                src={jogjaImages}
                width={600}
                height={400}
                widths={[400, 600, 800]}
                sizes="(max-width: 768px) 100vw, 33vw"
                loading="lazy"
              />
            </div>
            <div class="p-6">
              <div class="flex justify-between items-start mb-4">
                <div>
                  <h4 class="text-xl font-bold mb-1">Jogja Heritage Trip</h4>
                  <p class="text-slate-600 text-sm flex items-center gap-1">
                    <span class="material-icons text-sm">location_on</span>
                    Borobudur, Malioboro
                  </p>
                </div>
                <div class="text-right">
                  <span class="text-xs text-slate-600 block uppercase"
                    >Mulai Dari</span
                  >
                  <span class="text-primary font-bold text-lg">Rp 1.8jt</span>
                </div>
              </div>
              <ul class="space-y-2 mb-6">
                <li
                  class="flex items-center gap-2 text-sm text-slate-600"
                >
                  <span class="material-icons text-sm text-green-500"
                    >done</span
                  >
                  Tiket Masuk Objek Wisata
                </li>
                <li
                  class="flex items-center gap-2 text-sm text-slate-600"
                >
                  <span class="material-icons text-sm text-green-500"
                    >done</span
                  >
                  Guide Lokal Ramah
                </li>
              </ul>
              <a
                href="https://wa.me/6287715240225?text=Halo%20FachriExampleTravel,%20saya%20tertarik%20pesan%20paket%20Jogja%20Heritage%20Trip."
                class="block w-full py-3 bg-primary/10 hover:bg-primary hover:text-white text-primary font-bold rounded-lg transition-all text-center underline-none"
                aria-label="Pesan Paket Jogja Heritage Trip lewat WhatsApp"
              >
                Pesan Sekarang
              </a>
            </div>
          </div>
          <!-- Lombok Card -->
          <div
            class="bg-white rounded-2xl overflow-hidden shadow-lg border border-primary/5 hover:shadow-2xl transition-all group"
          >
            <div class="relative h-64 overflow-hidden">
              <Image
                alt="Clear turquoise waters of Gili Trawangan beach in Lombok Tour"
                class="w-full h-full object-cover group-hover:scale-110 transition-transform duration-500"
                src={lombokImages}
                width={600}
                height={400}
                widths={[400, 600, 800]}
                sizes="(max-width: 768px) 100vw, 33vw"
                loading="lazy"
              />
            </div>
            <div class="p-6">
              <div class="flex justify-between items-start mb-4">
                <div>
                  <h4 class="text-xl font-bold mb-1">Lombok Gili Island</h4>
                  <p class="text-slate-600 text-sm flex items-center gap-1">
                    <span class="material-icons text-sm">location_on</span> Gili
                    Trawangan, Mandalika
                  </p>
                </div>
                <div class="text-right">
                  <span class="text-xs text-slate-600 block uppercase"
                    >Mulai Dari</span
                  >
                  <span class="text-primary font-bold text-lg">Rp 2.9jt</span>
                </div>
              </div>
              <ul class="space-y-2 mb-6">
                <li
                  class="flex items-center gap-2 text-sm text-slate-600"
                >
                  <span class="material-icons text-sm text-green-500"
                    >done</span
                  >
                  Snorkeling &amp; Glass Boat
                </li>
                <li
                  class="flex items-center gap-2 text-sm text-slate-600"
                >
                  <span class="material-icons text-sm text-green-500"
                    >done</span
                  >
                  Makan Malam Romantis
                </li>
              </ul>
              <a
                href="https://wa.me/6287715240225?text=Halo%20FachriExampleTravel,%20saya%20tertarik%20pesan%20paket%20Lombok%20Gili%20Island."
                class="block w-full py-3 bg-primary/10 hover:bg-primary hover:text-white text-primary font-bold rounded-lg transition-all text-center underline-none"
                aria-label="Pesan Paket Lombok Gili Island lewat WhatsApp"
              >
                Pesan Sekarang
              </a>

            </div>
          </div>
        </div>
      </div>
    </section>